{
  "name": "eform-frontend",
  "version": "0.0.1",
  "description": "This is our eForm-Frontend",
  "author": "Carvalho, Vinicius Luiz <carvalho.viniciusluiz@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest --passWithNoTests",
    "test:clear": "jest --clearCache",
    "test:watch": "yarn test --watch",
    "test:ci": "yarn test --coverage",
    "test:cypress": "export NODE_OPTIONS=--openssl-legacy-provider && cypress open",
    "test:cypress:run": "export NODE_OPTIONS=--openssl-legacy-provider && cypress run",
    "update:packages": "yarn ncu -u",
    "lint": "eslint 'src/**' --fix"
  },
  "dependencies": {
    "axios": "^0.25.0",
    "jwt-decode": "^3.1.2",
    "npm-check-updates": "^12.2.0",
    "path": "^0.12.7",
    "react": "^17.0.2",
    "react-content-loader": "^6.1.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.24.2",
    "react-icons": "^4.3.1",
    "react-router-dom": "^6.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@types/faker": "^5.5.9",
    "@types/jest": "^27.4.0",
    "@types/jwt-decode": "^3.1.0",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "5.10.0",
    "@vitejs/plugin-react": "^1.1.4",
    "cypress": "^9.3.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^21.0.1",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-standard": "^5.0.0",
    "faker": "5.5.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-localstorage-mock": "^2.4.18",
    "prettier": "^2.5.1",
    "sass": "^1.49.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5",
    "vite": "^2.7.13"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.{ts,tsx}",
      "!<rootDir>/src/**/index.{ts,tsx}",
      "!<rootDir>/src/main/**/*",
      "!<rootDir>/src/presentation/assets/**/*",
      "!**/*.d.ts"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/src/main/test/cypress"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "<rootDir>/src/main/config/jest-setup.ts"
    ],
    "testEnvironment": "jsdom",
    "transform": {
      ".+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1",
      "~/(.*)": "identity-obj-proxy",
      "\\.scss$": "identity-obj-proxy"
    }
  }
}
